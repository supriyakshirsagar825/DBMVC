        @Html.DisplayFor(modelItem => item.Address.City)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address.Country)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address.State)
    </td>
    <td>
        @Html.HiddenFor(modelItem => item.Address.Id)
    </td>
    <td>
        @Html.ActionLink("Edit", "EditEmployee", new { id = item.Id }) |
        @Html.ActionLink("Details", "GetEmployee", new { id = item.Id }) |
        @Html.ActionLink("Delete Emp", "Delete", new { id = item.Id ,addid=item.Address.Id})
    </td>
</tr>
